import { useState } from "react";

export function Newsletter() {
  const [email, setEmail] = useState("");

  const handleSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    alert(`Thank you for subscribing: ${email}`);
    setEmail("");
  };

  return (
    <section id="contact" className="py-32 px-6 bg-foreground text-background">
      <div className="container mx-auto max-w-4xl text-center">
        <div className="space-y-8">
          <div>
            <p className="text-sm tracking-[0.3em] uppercase text-background/60 mb-6">
              Stay Connected
            </p>
            <h2 className="mb-8 text-background">The Art of Renewal</h2>
            <div className="w-16 h-px bg-accent mx-auto mb-8"></div>
          </div>
          <p className="text-lg text-background/80 leading-relaxed max-w-2xl mx-auto">
            Receive stories of transformation, insights on sustainable luxury,<br className="hidden md:block" /> and invitations to exclusive collections.
          </p>
          
          <form onSubmit={handleSubmit} className="flex flex-col sm:flex-row gap-4 max-w-xl mx-auto pt-4">
            <input
              type="email"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              placeholder="Your email address"
              required
              className="flex-1 px-6 py-4 bg-transparent border border-background/30 text-background placeholder:text-background/40 focus:outline-none focus:border-accent transition-colors"
            />
            <button
              type="submit"
              className="px-10 py-4 bg-background text-foreground hover:bg-accent hover:text-white transition-all duration-300"
            >
              <span className="text-sm tracking-[0.15em] uppercase">Subscribe</span>
            </button>
          </form>
        </div>
      </div>
    </section>
  );
}
