import { Menu, X } from "lucide-react";
import { useState } from "react";

export function Header() {
  const [isMenuOpen, setIsMenuOpen] = useState(false);

  return (
    <header className="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md border-b border-border/50">
      <div className="container mx-auto px-6 py-6">
        <div className="flex items-center justify-between">
          {/* Logo */}
          <div className="flex items-center">
            <h1 className="text-2xl tracking-[0.3em]">RENEW</h1>
          </div>

          {/* Desktop Navigation */}
          <nav className="hidden md:flex items-center gap-10">
            <a href="#how-it-works" className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300">
              Process
            </a>
            <a href="#about" className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300">
              Philosophy
            </a>
            <a href="#transformations" className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300">
              Gallery
            </a>
            <a 
              href="#upload" 
              className="text-sm tracking-[0.15em] uppercase px-6 py-2 border border-foreground hover:bg-foreground hover:text-background transition-all duration-300"
            >
              Begin
            </a>
          </nav>

          {/* Menu Button */}
          <div className="flex items-center gap-4">
            <button
              className="md:hidden hover:text-accent transition-colors"
              onClick={() => setIsMenuOpen(!isMenuOpen)}
            >
              {isMenuOpen ? <X className="w-5 h-5" /> : <Menu className="w-5 h-5" />}
            </button>
          </div>
        </div>

        {/* Mobile Navigation */}
        {isMenuOpen && (
          <nav className="md:hidden mt-8 pb-6 flex flex-col gap-6 border-t border-border/50 pt-6">
            <a
              href="#how-it-works"
              className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300"
              onClick={() => setIsMenuOpen(false)}
            >
              Process
            </a>
            <a
              href="#about"
              className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300"
              onClick={() => setIsMenuOpen(false)}
            >
              Philosophy
            </a>
            <a
              href="#transformations"
              className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300"
              onClick={() => setIsMenuOpen(false)}
            >
              Gallery
            </a>
            <a
              href="#upload"
              className="text-sm tracking-[0.15em] uppercase hover:text-accent transition-colors duration-300"
              onClick={() => setIsMenuOpen(false)}
            >
              Begin
            </a>
          </nav>
        )}
      </div>
    </header>
  );
}
